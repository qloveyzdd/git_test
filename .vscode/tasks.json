{
    "tasks": [
        {
            "type":"shell",
            "label": "creatrBuildDir",
            "command":"mkdir",
            "args": [
                "-Force",
                "build",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "type":"shell",
            "label": "cmakerun",
            "command":"cmake",
            "args": [
                "-G",
                "\\\"MinGW Makefiles\\\"",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "creatrBuildDir"
            ],
        },
        {
            "type":"shell",
            "label": "A",
            "command":"del",
            "args": [
                "${workspaceFolder}/build/*.dll",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "cmakerun"
            ],
        },
        {
            "type":"shell",
            "label": "A1",
            "command":"move",
            "args": [
                "${workspaceFolder}/build/simple_c_helper_file/*.dll",
                "${workspaceFolder}/build",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "A"
            ],
        },
        {
            "type":"shell",
            "label": "makerun",
            "command":"mingw32-make.exe",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": [
                "A1"
            ],
        },
    ],
    "version": "2.0.0"
}